<% case outcome
   when ChinChin::Game::WIN %>
  <img src="img/win.gif" alt="Win" width="32px" height="16px" />
<% when ChinChin::Game::LOST %>
  <img src="img/lost.gif" alt="Lost" width="32px" height="16px" />
<% when ChinChin::Game::DRAW %>
  <img src="img/draw.gif" alt="Draw" width="32px" height="16px" />
<% else %>
<% end %>
