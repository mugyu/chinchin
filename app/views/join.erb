<div class="row">
  <form action="<%= url("/players") %>" method="post" class="form-inline col-md-12" role="form">

    <div class="form-group<%= " has-error has-feedback" if validation_error %>">
      <label for="name" class="control-label">Name:</label>
      <input id="name" type="text" name="name" class="form-control"
             required placeholder="Enter name">
      <% if validation_error %>
        <span class="glyphicon glyphicon-remove form-control-feedback"></span>
      <% end %>
    </div>

    <input type="submit" value="Let me join the game." class="btn btn-primary" />

    <% if validation_error %>
      <div class="alert alert-danger validation_error" role="alert">
        <%= validation_error %>
      </div>
    <% end %>
  </form>
</div>
<div class="row">
  <div class="col-md-12">
    <hr />
    <a href="<%= url("/") %>" class="btn btn-default">Cancel</a>
  </div>
</div>
