<link rel="stylesheet" href="css/play.css">

<!-- Nav tabs -->
<ul class="nav nav-tabs" role="tablist">
  <li class="active"><a href="#home" role="tab" data-toggle="tab">Play</a></li>
  <li><a href="#players" role="tab" data-toggle="tab">Players</a></li>
</ul>

<!-- Tab panes -->
<div class="tab-content">

  <!-- play#home -->
  <div id="home" class="tab-pane active">
    <div>
      <a href="<%= url("/play") %>" id="next-play" class="btn btn-primary btn-lg" role="button">NEXT PLAY</a>
      <a href="<%= url("/") %>" id="reset-game" class="btn btn-danger btn-lg" role="button">RESET GAME</a>
    </div>

    <h2>Play Result</h2>
    <div id="banker_panel">
      <h3>Banker</h3>
      <%= play_result(game_results[:banker]) %>
      </div>
      <div id="punters_panel">
      <h3>Punters</h3>
      <% game_results[:punters].each do |result| %>
        <%= play_result(result) %>
      <% end %>
    </div>
  </div>

  <!-- play#players -->
  <div id="players" class="tab-pane">
    <%= erb :players_list, players: players %>
  </div>
</div>
